<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <img src="/assets/images/burger.png" alt="burger" />
            <h1> Eat-Da-Burger! </h1>
        </div>
    </div>
    <form class="create-form">
        <div class="form-group">
            <p>Please order your burger here<p>
                <input type="text" id="newburger" name="burger">
                <button type="submit" class="btn btn-success" id="addburger">
                    <span class="fa fa-thumbs-up"></span>
                </button>
        </div>
    </form>
                <h3>Enjoy your burger!</h3>
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
                        <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
                            data-newDevoured="{{devour}}"><span class="fa fa-usd"></span></button>
                        {{/unless}}
                        {{/each}}
                    </ul>
    <div class="col-md-6 text-center" class="task">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Devoured</button>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
